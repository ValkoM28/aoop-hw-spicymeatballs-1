<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="spicymeatballs_take2.MainWindow"
        Title="Img Editor"
        Width="500" Height="500"
        Background="White">
    <StackPanel>
        <Button Content="Load Image" Click="OnLoadClick" Background="Black"/>
        <Button Content="Save Image" Click="OnSaveClick" Background="Black"/>
        <ItemsControl x:Name="ImageGrid">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="GridPanel"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </StackPanel>
</Window>