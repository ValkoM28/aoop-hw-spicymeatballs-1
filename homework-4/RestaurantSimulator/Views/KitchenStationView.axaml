<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="using:RestaurantSimulator.Converters"
             xmlns:vm="using:RestaurantSimulator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="RestaurantSimulator.Views.KitchenStationView"
             x:DataType="vm:KitchenStationViewModel">

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border BorderBrush="{DynamicResource ThemeBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="4"
            Margin="5"
            Padding="15">
        <Grid RowDefinitions="Auto,*,Auto">
            <StackPanel Grid.Row="0" Spacing="5">
                <TextBlock Text="{Binding Station.Name}"
                           FontSize="20"
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding Station.IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='Available|Busy'}"
                           FontSize="14"
                           Foreground="{Binding Station.IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='Green|Red'}"/>
            </StackPanel>
            
            <Grid Grid.Row="1" 
                  IsVisible="{Binding CurrentRecipeViewModel, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Margin="0,10">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding CurrentRecipeViewModel.Recipe.Name}"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentRecipeViewModel.CurrentStepDescription}"
                               FontSize="16"
                               TextWrapping="Wrap"/>
                    <ProgressBar Value="{Binding CurrentRecipeViewModel.StepProgress}"
                                Maximum="100"
                                Height="15"
                                Margin="0,5"/>
                    <Grid ColumnDefinitions="*,*" Margin="0,5">
                        <StackPanel Grid.Column="0" Spacing="5">
                            <TextBlock Text="{Binding CurrentRecipeViewModel.Recipe.ProgressPercentage, StringFormat='Overall Progress: {0:F1}%'}"
                                       FontSize="14"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding CurrentRecipeViewModel.RemainingTime, StringFormat='Time Remaining: {0}'}"
                                       FontSize="14"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <TextBlock Grid.Row="2"
                       Text="No Recipe Assigned"
                       IsVisible="{Binding Station.IsAvailable}"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl> 