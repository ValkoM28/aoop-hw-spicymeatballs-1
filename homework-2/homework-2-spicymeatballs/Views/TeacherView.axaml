<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:homework_2_spicymeatballs.ViewModels"
        x:Class="homework_2_spicymeatballs.Views.TeacherView"
        x:DataType="vm:TeacherViewModel"
        Title="Teacher Panel"
        Width="600" Height="400">

    <Design.DataContext>
        <vm:TeacherViewModel/>
    </Design.DataContext>

    <Grid>
        <StackPanel>
            <!-- Teacher Info -->
            <TextBlock Text="Teacher Information" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Username: {Binding Username}" FontSize="16"/>
            <TextBlock Text="Full Name: {Binding FullName}" FontSize="16" Margin="0,0,0,10"/>

            <!-- Teaching Subjects -->
            <TextBlock Text="Teaching Subjects" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox ItemsSource="{Binding TeachingSubjects}" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" Padding="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
