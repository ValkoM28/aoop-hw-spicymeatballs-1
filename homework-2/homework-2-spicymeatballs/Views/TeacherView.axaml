<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:homework_2_spicymeatballs.ViewModels"
        x:Class="homework_2_spicymeatballs.Views.TeacherView"
        x:DataType="vm:TeacherViewModel"
        Title="Teacher Panel"
        Width="800" Height="450">

    <Design.DataContext>
        <vm:TeacherViewModel/>
    </Design.DataContext>

    <Grid>
        <Border Background="#F5F5DC">
            <StackPanel>
                <!-- Teacher Info -->
                <TextBlock Text="Teacher Information" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Username: {Binding Username}" FontSize="16"/>
                <TextBlock Text="Full Name: {Binding FullName}" FontSize="16" Margin="0,0,0,10"/>

                <!-- Teaching Subjects -->
                <TextBlock Text="Teaching Subjects" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
                <Button Content="Delete Subject" Command="{Binding }" CornerRadius="8"/>
                <Button Content="Create Subject" Command="{Binding }" CornerRadius="8"/> <!--Both create and delete should be side by side for easy of use-->
                <ListBox ItemsSource="{Binding }" SelectedItem="{Binding , Mode=TwoWay}" Height="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" FontSize="14" Padding="5"/>
                            </StackPanel>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <Button Content="Create Subject" Command="{Binding }" CornerRadius="8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
